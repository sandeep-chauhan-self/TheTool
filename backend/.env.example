# ============================================================================
# TheTool Backend Configuration
#
# FOLLOW: TheTool.prompt.md Section 10 (Deployment Workflow & Environment Management)
# All configuration uses centralized constants from backend/constants.py
#
# Environment-Specific Values:
#
# DEVELOPMENT (local):
#   FLASK_ENV=development
#   FLASK_HOST=0.0.0.0
#   FLASK_PORT=5000
#   CORS_ORIGINS=http://localhost:3000,http://192.168.57.1:3000
#
# PRODUCTION (Railway):
#   FLASK_ENV=production
#   CORS_ORIGINS=https://the-tool-theta.vercel.app,https://thetool-production.up.railway.app
#   DATABASE_URL=postgresql+psycopg://... (from Railway)
#   REDIS_URL=redis://... (from Railway)
# ============================================================================

# API Authentication
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
MASTER_API_KEY=

# Application Environment
FLASK_ENV=development
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
DEBUG=False

# Database Configuration
# Leave empty for SQLite; use DATABASE_URL for PostgreSQL (Railway)
# DATABASE_URL=postgresql+psycopg://user:password@host:port/database
DATA_PATH=./data
DB_NAME=trading_app.db

# CORS Configuration: comma-separated list of allowed frontend origins
# USES CENTRALIZED CONSTANTS: backend/constants.py CORS_CONFIG
# Can override here for specific deployments
# CORS_ORIGINS=http://localhost:3000,https://the-tool-theta.vercel.app

# Redis Configuration (for Celery, caching, job state management)
# Leave empty to use defaults; or use REDIS_URL from Railway
# REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=
REDIS_ENABLED=False

# Threading Configuration
MAX_THREADS=10
MAX_BULK_WORKERS=5

# Caching Configuration
CACHE_ENABLED=True
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
ANALYZE_RATE_LIMIT=10

# Market Data Configuration
DEFAULT_CAPITAL=100000
USE_DEMO_DATA=True
YAHOO_TIMEOUT=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/trading_app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Performance Configuration
ENABLE_NUMBA=True
ENABLE_VECTORIZATION=True

# Data Retention Configuration
KEEP_LAST_ANALYSES=10
CLEANUP_INTERVAL=3600

# Monitoring & Metrics
METRICS_ENABLED=False
METRICS_PORT=9090

# Development Settings
FLASK_DEBUG_TOOLBAR=False
SQL_DEBUG=False
TIME_REQUESTS=True
