# Trading Platform Environment Configuration
# CRITICAL FIX (ISSUE_019): Externalized configuration to prevent hardcoded values

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Master API Key for authentication (ISSUE_021)
# Generate using: python -c "import secrets; print(secrets.token_urlsafe(32))"
MASTER_API_KEY=your-secure-api-key-here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Path to SQLite database directory (relative to backend/)
DATA_PATH=./data

# Database file name
DB_NAME=trading_app.db

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Flask environment (development, production, testing)
FLASK_ENV=development

# Enable debug mode (NEVER set to True in production!)
DEBUG=False

# Flask app host
FLASK_HOST=0.0.0.0

# Flask app port
FLASK_PORT=5000

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://192.168.57.1:3000

# =============================================================================
# THREADING CONFIGURATION
# =============================================================================

# Maximum number of concurrent analysis threads
# Formula: min(MAX_THREADS, (cpu_count * 2))
MAX_THREADS=10

# Maximum workers for bulk analysis
MAX_BULK_WORKERS=5

# =============================================================================
# CACHE CONFIGURATION (ISSUE_011)
# =============================================================================

# Enable in-memory caching for indicator results
CACHE_ENABLED=True

# Cache TTL in seconds (1 hour default)
CACHE_TTL=3600

# Maximum cache size (number of entries)
CACHE_MAX_SIZE=1000

# =============================================================================
# RATE LIMITING CONFIGURATION (ISSUE_023)
# =============================================================================

# Enable rate limiting
RATE_LIMIT_ENABLED=True

# Default rate limit (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# Rate limit for analysis endpoint (more restrictive)
ANALYZE_RATE_LIMIT=10

# =============================================================================
# MARKET DATA CONFIGURATION
# =============================================================================

# Default capital for analysis
DEFAULT_CAPITAL=100000

# Use demo data by default (for testing)
USE_DEMO_DATA=True

# Yahoo Finance request timeout (seconds)
YAHOO_TIMEOUT=30

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file path
LOG_FILE=./logs/trading_app.log

# Maximum log file size (bytes) - 10MB default
LOG_MAX_SIZE=10485760

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# =============================================================================
# REDIS CONFIGURATION (EVOLUTIONARY_RISK_001 - Message Queue System)
# =============================================================================

# Enable Redis-based job state (distributed system support)
# Set to False to use in-memory job tracking (single server only)
REDIS_ENABLED=False

# Redis server host
REDIS_HOST=localhost

# Redis server port
REDIS_PORT=6379

# Redis database number (0-15)
REDIS_DB=0

# Redis password (optional, leave empty if no auth)
REDIS_PASSWORD=

# Maximum Redis connection pool size
REDIS_MAX_CONNECTIONS=50

# Job state TTL (time to live) in seconds - 24 hours default
JOB_STATE_TTL=86400

# Job cleanup interval (seconds) - 1 hour default
JOB_CLEANUP_INTERVAL=3600

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Enable numba JIT compilation for indicators (ISSUE_006)
ENABLE_NUMBA=True

# Enable vectorization optimizations (ISSUE_004, ISSUE_005)
ENABLE_VECTORIZATION=True

# =============================================================================
# CLEANUP CONFIGURATION
# =============================================================================

# Number of analysis results to keep per ticker
KEEP_LAST_ANALYSES=10

# Auto-cleanup interval (seconds) - 1 hour default
CLEANUP_INTERVAL=3600

# =============================================================================
# MONITORING & METRICS
# =============================================================================

# Enable performance metrics collection
METRICS_ENABLED=False

# Metrics export port (Prometheus format)
METRICS_PORT=9090

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable Flask debug toolbar
FLASK_DEBUG_TOOLBAR=False

# Enable SQL query logging
SQL_DEBUG=False

# Enable request timing logs
TIME_REQUESTS=True
